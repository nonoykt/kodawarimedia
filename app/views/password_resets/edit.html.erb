<% provide(:title, "Password Reset") %>
<div class="container form-container passoword_reset-container">
  <div class="row">
    <div class="col">
      <div class="form-logo-img">
        <%= link_to image_tag('kodawarimedia-1.jpeg', width: 100), root_path, class: "logo-img" %>
      </div>
      <h1 class="form-title">パスワード再設定</h1>
      <%= form_widh(model: @user, url: password_reset_path(params[:id]), local: true) do |form| %>
      <%= render 'shared/error_messages', object: form.object %>
      <%= hidden_field_tag :email, @user.email %>
      <div class="form-group">
        <%= form.password_field :password, class: 'form-control', placeholder: "パスワード" %>
      </div>
      <div class="form-group">
        <%= form.password_field :password_confirmation, class: 'form-control', placeholder: "パスワード（確認）" %>
      </div>
      <div class="form-group">
        <%= form.submit "送信", class: 'btn btn-info btn-lg form-submit' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
