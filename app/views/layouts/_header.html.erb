<header>
  <div class="container">
    <nav class="navbar nabvar-expand-sm navbar-dark fixed-top navbar-extend">
      <a class="navbar-brand" href="#">
        <div class="navbar-brand-extend">
          <%= link_to image_tag('kodawarimedia-1.jpeg', height: 30), root_path, class: "logo-text" %>
        </div>
      </a>

      <button class="navbar-toggler" data-toggle="collapse" data-target="#menu">
        <span class="navabar-toggler-icon"></span>
      </button>

      <div id="menu" class="collapse navbar-collapse">
        <ul class="navbar-nav ml-auto">
          <% if logged_in? %>
            <li class="nav-itme nav-item-extend">
              <%= link_to "kodawarimedia", root_url, class: "btn btn-info btn-md btn-extend" %>
            </li>
            <li class="nav-itme nav-item-extend">
              <%= link_to "kodawari profile", user_path(current_user), class: "btn btn-secondary btn-md btn-extend" %>
            </li>
            <li class="nav-itme nav-item-extend">
              <%= link_to "EDIT profile", edit_user_path(current_user), class: "btn btn-secondary btn-md btn-extend" %>
            </li>
            <li class="nav-itme nav-item-extend">
              <%= link_to "Logout", logout_path, method: :delete, class: "btn btn-danger btn-md btn-extend btn-logout-extend" %>
            </li>
          <% else %>
            <li class="nav-itme nav-item-extend">
              <%= link_to "新しくはじめる", signup_path, class: "btn btn-info btn-md btn-extend" %>
            </li>
            <li class="nav-itme nav-item-extend">
              <%= link_to "Login", login_path, class: "btn btn-info btn-md btn-extend btn-login-extend" %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>
