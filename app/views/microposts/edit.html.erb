<% provide(:title, 'Micropost Edit') %>
<div class="container micropost-edit-container">
  <div class="edit-titles">
    <%= image_tag 'edit.jpeg', class: 'edit-img' %>
    <h1 class="title edit-micropost-title">ポスト編集</h1>
  </div>
  <%= form_with(model: @micropost, url: micropost_path, local: true) do |form| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
      <%= form.label :content %>
      <%= form.text_area :content, class: 'form-control', placeholder: @micropost.content %>
    </div>
    <div class="form-group">
      <%= form.label :picture, '画像' %>
      <%= form.file_field :picture, class: 'form-control-file', placeholder: @micropost.picture %>
    </div>
    <div class="row">
      <div class="col">
        <div class="form-group">
          <%= link_to '削除', micropost_path, method: :delete,
              data: { confirm: "削除してもよろしいでしょうか？" },
              class: 'btn btn-lg btn-danger btn-edit-user' %>
        </div>
      </div>
      <div class="col">
        <div class="form-group">
          <%= form.submit "編集",
            class: 'btn btn-info btn-lg btn-edit-user'%>
        </div>
      </div>
      <div class="form-group">
        <%= link_to "戻る", current_user,
          class: 'btn btn-lg btn-edit-user btn-back'%>
      </div>
    </div>
  <% end %>
</div>
